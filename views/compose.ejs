<%- include("partials/header") -%>

<h1>Compose</h1>

<form action="/compose" method="post">
    <div class="form-group">

        <label for="postTitle">Title</label>
        <input type="text" class="form-control" name="postTitle" autocomplete="off">

        <label for="postBody">Post</label>
        <textarea name="postBody" rows="5" cols="30" class="form-control" autocomplete="off"></textarea>
        
    </div>
    
    <div>
        <button type="submit" name ="button" class="btn btn-primary">Publish</button>
    </div>
</form>


<%- include("partials/footer") -%>